{
    "name": "cocktail-app",
    "private": true,
    "version": "0.0.0",
    "scripts": {
        "dev": "vite",
        "build": "vite build",
        "serve": "vite preview",
        "type-check": "vue-tsc --noEmit",
        "prepare": "husky install",
        "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore",
        "format": "prettier --write src/",
        "test": "jest"
    },
    "dependencies": {
        "pinia": "^2.0.0",
        "vue": "^3.4.0",
        "vue-lazyload": "^3.0.0",
        "vue-router": "^4.0.0",
        "@vercel/node": "^3.0.0"
    },
    "devDependencies": {
        "@types/node": "^20.0.0",
        "@types/sass": "^1.43.1",
        "@vitejs/plugin-vue": "^4.6.2",
        "husky": "^9.1.7",
        "lint-staged": "^15.5.0",
        "sass": "^1.85.1",
        "sass-embedded": "^1.85.1",
        "sass-loader": "^16.0.5",
        "typescript": "^5.0.0",
        "vite": "^5.0.0",
        "vue-tsc": "^1.8.27"
    },
    "engines": {
        "node": ">=18.0.0"
    },
    "lint-staged": {
        "*.{js,ts,vue}": [
            "eslint --fix",
            "prettier --write"
        ]
    }
}
